<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/salutation"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="UK Earthquake Data Gatherer"
            android:textColor="#A29570"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acknowledgement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contains British Geological Survey materials Â©NERC 2019"
            android:textColor="#A29570"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="448dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/myList"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:gravity="center_vertical|left|start"
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="51dp">

                    <TextView
                        android:id="@+id/minMax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#A29570" />

                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="219dp"
                    android:layout_height="37dp"

                    android:backgroundTint="#002C3F"
                    android:text="Press to get data" />

                <Button
                    android:id="@+id/mapButton"
                    android:layout_width="217dp"
                    android:layout_height="37dp"

                    android:backgroundTint="#002C3F"
                    android:text="Press to get map" />

                <Button
                    android:id="@+id/searchDateButton"
                    android:layout_width="217dp"
                    android:layout_height="37dp"

                    android:backgroundTint="#002C3F"
                    android:text="Press to search date range" />


                <TextView
                    android:id="@+id/dateDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"

                    android:background="#002C3F"
                    android:text="Start Date"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerStartDate"
                        android:layout_width="93dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:prompt="@string/app_name" />

                    <Spinner
                        android:id="@+id/spinnerStartDateMonth"
                        android:layout_width="98dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:prompt="@string/app_name" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dateEndDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"

                    android:background="#002C3F"
                    android:text="End Date"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"

                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerEndDate"
                        android:layout_width="92dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:prompt="@string/app_name" />

                    <Spinner
                        android:id="@+id/spinnerEndDateMonth"
                        android:layout_width="99dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:prompt="@string/app_name" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</ScrollView>